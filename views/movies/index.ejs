<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js">
		</script>

</head>

<body>
	<header class="text-center">
		<h1>AMC Movies</h1>
	</header>
	<main class="container">
		<section class="container col block">
			<h3>Top 10</h3>
			<div class="index-list">
				<!-- list of top movies with images -->
				<% for(let i = 0; i < topMovies.length; i++) { %>
					<a href="/movies/<%= topMovies[i].id%>">
						<img src="<%= topMovies[i].media.posterStandard %>">
					</a>
				<% } %>
			</div>
			<h3>Now Playing</h3>
			<div class="index-list">
				<% for(let i = 0; i < nowMovies.length; i++) { %>
					<a href="/movies/<%= nowMovies[i].id%>">
						<img src="<%= nowMovies[i].media.posterStandard %>">
					</a>
				<% } %>
			</div>
			<h3>Coming Soon</h3>
			<div class="index-list">
				<% for(let i = 0; i < coming.length; i++) { %>
					<a href="/movies/<%= coming[i].id%>">
						<img src="<%= coming[i].media.posterStandard %>">
					</a>
				<% } %>
			</div>
		</section>
		<footer class="block">
			
		</footer>
	</main>
	<script type="text/javascript" src="/js/movieApp.js"></script>
</body>
</html>