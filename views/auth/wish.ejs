<section class="container">
	<h1><%= user.username%>'s Wish List</h1>
	<% for(let i = 0; i < wishlist.length; i++) { %>
		<div class = "card block">
			<div class="contents">
				<a href="/movies/<%= wishlist[i].id%>"><img class="card-img-left" src="<%= wishlist[i].media.posterStandard %>"></a>
				<div class="card-body">
					<p class="card-text"><span class="title"><%= wishlist[i].name %></span> <span class="rating"><%= wishlist[i].mpaaRating %></span></p>
					<p class="card-text"><%= wishlist[i].runTime %> min</p>
					<p class="card-text synopsis"><%= wishlist[i].synopsis %></p>
					<form action="/wish?movieId=<%= wishlist[i].movieId%>&name=<%=wishlist[i].name%>&poster=<%= wishlist[i].media.posterStandard%>&link=<%= wishlist[i].links.self.href%>&mpaaRating=<%= wishlist[i].mpaaRating %>&runTime=<%= wishlist[i].runTime %>&synopsis=<%= wishlist[i].synopsis %>" method="POST">
					<button>Watched</button>
				</form>
					<form action="/wish/<%= wishlist[i].id%>?_method=DELETE" method="POST">
						<button>Delete</button>
					</form>
				</div>
			</div>
		</div>
	<% } %>
</section>