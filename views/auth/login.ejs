<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js">
		</script>
</head>
<body class="container">
	<header class="container block">
		<div class="container text-center">
			<h1>AMC Showtimes</h1>
		</div>
		<div class="container movie-header">
			<div class="search">
				<form action="/api/search" method="GET">
					<input type="text" name="name" placeholder="name" />
					<input type="text" name="title" placeholder="zipcode">
					<button type="submit">Search</button>
				</form>
				
			</div>
			<div class="links row">
				<a href="/movie">Home</a>
				<a href="">Contacts</a>
				<a href="/movies/wish">Wish List</a>
				<a href="/login">Login</a>
			</div>
		</div>
	</header>
	<section class="container block  justify-content-center">
		<div class="login">
			<div class="col">
				<div id="tabs">
					<% if (register) { -%>
						<h4 id="login">Login</h4>
						<h4 id="register" class="highlighted">Register</h4>
					<% } else { -%>
						<h4 id="login" class="highlighted">Login</h4>
						<h4 id="register">Register</h4>
					<% } -%>
					
				</div>
				<form id="login-form"
				<% if (register) { -%>
					action="/register"
				<% } else { -%>
					action="/login"
				<% } -%> method="POST">

					<% if (errMessage) { -%>
						<p id="error"><%= errMessage %></p>
					<% } -%>
					<input type="text" name="username" placeholder="Username"><br><br>
					<input type="password" name="password" placeholder="Password"><br><br>
					<input type="submit" value="Submit">
				</form>
			</div>
		</div>
	</section>
	<footer class="block">
		
	</footer>
	<script type="text/javascript" src="/js/app.js"></script>
</body>
</html>