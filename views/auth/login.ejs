<section class="container block  justify-content-center">
	<div class="login">
		<div class="col">
			<div id="tabs">
				<% if (register) { -%>
					<h4 id="login">Login</h4>
					<h4 id="register" class="highlighted">Register</h4>
				<% } else { -%>
					<h4 id="login" class="highlighted">Login</h4>
					<h4 id="register">Register</h4>
				<% } -%>
				
			</div>
			<form id="login-form"
			<% if (register) { -%>
				action="/register"
			<% } else { -%>
				action="/login"
			<% } -%> method="POST">

				<% if (errMessage) { -%>
					<p id="error"><%= errMessage %></p>
				<% } -%>
				<input type="text" name="username" placeholder="Username"><br><br>
				<input type="password" name="password" placeholder="Password"><br><br>
				<input type="text" class="hidden" name="from" value="<%= prevPage %>">
				<input type="submit" value="Submit">
			</form>
		</div>
	</div>
</section>